<mvc:View controllerName="com.lt.educationalreportui.controller.EducationalReport"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	<f:DynamicPage>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading >
					<Title text="{i18n>title}" textAlign="Center">
				</Title>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:content> 
		<VBox>
		<Table
				id="idTable"
				inset="false"
				items="{reportModel>/}">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="Report" level="H2"/>				
						<ToolbarSpacer />
						<Button text="Export" icon="sap-icon://excel-attachment" press="onReportExport"/>
						<Link text="Admin Detail Report " endIcon="sap-icon://excel-attachment" press="onDetailExport" emphasized="true"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="10%">
						<Text text="IC" />
					</Column>
					<Column width="30%">
						<Text text="IC Text" />
					</Column>
					<Column width="10%">
						<Text text="Save As Draft" />
					</Column>
					<Column width="10%">
						<Text text="Pending Approval" />
					</Column>
					<Column width="10%">
						<Text text="Approved" />
					</Column>
					<Column width="10%">
						<Text text="Self Approved" />
					</Column>
					<Column width="10%">
						<Text text="Rejected" />
					</Column>
					<Column width="10%">
						<Text text="No Action Yet" />
					</Column>
					<Column width="10%">
						<Text text="Total" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{reportModel>IC}" />
							<Text text="{reportModel>ICText}" />
							<Text text="{reportModel>D}" />
							<Text text="{reportModel>PA}" />
							<Text text="{reportModel>A}" /> 
							<Text text="{reportModel>SA}" /> 
							<Text text="{reportModel>R}" />
							<Text text="{reportModel>NAY}" />
							<Text text="{reportModel>Total}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>

